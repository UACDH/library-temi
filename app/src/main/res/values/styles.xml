<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for TextView holding a paining info field key -->
    <style name="painting_info_key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for TextView holding a paining info field value -->
    <style name="painting_info_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="dashboard_button">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">225dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:backgroundTint">@color/green_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="declare_button">Declare a Major/Minor</style>
</resources>