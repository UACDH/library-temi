<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingHorizontal="40dp"
    android:stretchColumns="0">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please rate your tour experience!"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    <TableRow
        android:layout_marginTop="25dp"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Information was delivered clearly and effectively"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:maxWidth="350dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/cell_shape" />
    </TableRow>

    <TableRow
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:maxWidth="350dp"
            android:text="The information provided was interesting and/or useful"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/cell_shape" />
    </TableRow>

    <TableRow
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:maxWidth="350dp"
            android:text="Tour interface was intuitive and easy to use"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/ratingBar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/cell_shape" />
    </TableRow>

    <TableRow
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/cell_shape">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:maxWidth="350dp"
            android:text="The robot performed well"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/ratingBar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/cell_shape" />
    </TableRow>

</TableLayout>