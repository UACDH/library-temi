<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TemiTour">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@layout/popup_activity" />
        <meta-data
            android:name="com.robotemi.sdk.metadata.SKILL"
            android:value="@string/app_name" />
        <meta-data
            android:name="@string/metadata_permissions"
            android:value="com.robotemi.permission.settings" />

        <!-- Main Activity -->
        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity
            android:name=".TourActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".TourSurveyActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".CoursesActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".EventsActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".ProfessorsActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".AlumniActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".NewsActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".InfoActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".FeedbackActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
    </application>

</manifest>
